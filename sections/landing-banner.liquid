<script>
  function toggleMenu() {
    const msg = document.querySelector('.header-msg');
    const link = document.querySelector('.header-link');
    msg.style.display = msg.style.display === 'none' || msg.style.display === '' ? 'block' : 'none';
    link.style.display = link.style.display === 'none' || link.style.display === '' ? 'block' : 'none';
  }
</script>

{% schema %}
{
  "name": "Landing Page Banner",
  "tag": "section",
  "class": "section",

  "settings": [
    {
      "type": "text",
      "id": "header-title",
      "label": "Set Header Title",
      "default": "Afzal Test Shop"
    },
    {
      "type": "text",
      "id": "header-msg",
      "label": "Set Header Message",
