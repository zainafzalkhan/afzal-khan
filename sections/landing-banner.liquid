<style>
    .desktop ul {
      background-color: #f5f5f5;
      color: #333;
      height: 50px;
      height: 100%;
      padding: 20px 80px;
      list-style-type: none;

      display: flex;
      flex-direction:row;
      justify-content: space-between;
      align-items: center;


  }

  .mobile  {
    background-color: #f5f5f5;
    color: #333;
      min-height: 70px;
      height: 100%;
      padding: 20px 10px;
      display: none;
  }

    .mobile .logo{
      flex:1;
      text-align: center;
    }
    #menu-toggle{
      display: none;
    }
    .menu-icon {
      display: block;
      color: #333;
      font-size: 36px;
      cursor: pointer;
      position: absolute; /* Position the menu icon */
      left: 20px; /* Adjust the left position as needed */
      top: 15px; /* Adjust the top position as needed */
    }

    .mobile-list{
      padding-bottom: 29px;
      display: flex;
      list-style: none;
      flex-direction: column;
      background-color: #f5f5f5;
      align-items: center;
      position: absolute;
      gap: 12px;
      top: 70px;
      width: 100%;
      z-index: 10;
      transform: scale(1, 0);
      transform-origin: top;
      transition: transform 0.3s ease-in-out;
    }

    #menu-toggle:checked ~ .mobile-list {
      transform: scale(1, 1);
    }
    @media only screen and (max-width: 768px) {
      .desktop{

          display: none;
      }
      .mobile{
          display: flex;
      }

    }


     .header-title {
      height: 19px;
      margin: 0;
    }

    .header-msg {
      font-size: 16px;
      font-weight: 400;
      color: #333 !important;
    }
     .header-link {
      position: relative;
      text-decoration: none;
      background: yellow;
      color: #333;
      height: 44px;
      width: 207px;
      padding: 13px 60px;
      background-position: right;
      background-size: 200%;
      background-image: linear-gradient(to left, yellow 50%, #333 50%);
      transition: all 0.3s;
    }
    .header-link:hover {
      background-position: left;
      color: #fff;
    }
    .header-link::after {
      content: '→';
      position: absolute;
      top: 15px;
      right: 15px;
      transform: translateY(-50%);
      font-size: 40px;
    }
    .hero {
      height: 780px;
      background-size: cover;
      background-position: center;
      position: relative;
      color: #333;
      text-align: center;
      overflow: hidden;
      margin: 10px 87px;
    }

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      background-color: rgba(0, 0, 0, 0); /* Adjust the alpha value for the overlay color */
    }

    .hero-content {
      position: absolute;
      z-index: 1;
      left: 0px;
      bottom: 0px;
      background: #fff;
      width: 500px;
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .hero-content .title {
      font-size: 70px;
      font-weight: 500;
      margin: 0px;
      color: #333 !important;
    }

    .hero-content .msg {
      font-size: 18px;
      margin-bottom: 40px;
      text-align: left;
    }
    .hero-content .btn {
      position: relative;
      cursor: pointer;
      background: #333;
      color: #fff;
      font-size: 18px;
      padding: 15px 70px;
      background-position: right;
      background-size: 200%;
      background-image: linear-gradient(to left, #333 50%, yellow 50%);
      transition: all 0.3s;
    }
    .hero-content .btn:hover {
      background-position: left;
      color: #333;
    }
    .hero-content .btn::after {
      content: '→';
      position: absolute;
      right: 12px;
      transform: translateY(-50%);
      font-size: 55px;
    }
    .banner-footer {
      background-color: #f5f5f5;
      color: #333;
      height: 34px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    {% comment %} HEADER CSS {% endcomment %}


